<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flash_card_app.Views.CollectionPage"
             xmlns:model="clr-namespace:flash_card_app.Models"
             xmlns:viewmodel="clr-namespace:flash_card_app.ViewModels"
             x:DataType="viewmodel:CollectionViewModel"
             Title="CollectionPage">
    <Grid
        x:Name="CollectionPageGrid"
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackLayout
            Grid.Row="0"
            Padding="10"
            Spacing="20"
            Margin="0, 25, 0, 0">
            <Entry
                x:Name="CollectionName"
                Placeholder="Collection Name"/>
            <Button
                x:Name="AddCollection"
                Clicked="AddCollection_Clicked"
                Text="Add Collection"/>
            <Button
                x:Name="btnRefresh"
                Command="{Binding GetCollectionsCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Text="Refresh"/>
            <StackLayout
                Grid.Row="0"
                Padding="10">
                <ListView
                    x:Name="collectionList"
                    ItemsSource="{Binding OCollectionModel}"
                    SelectionMode="None"
                    BackgroundColor="Transparent"
                    SeparatorColor="Black"
                    RowHeight="60">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:CollectionModel">
                            <TextCell
                            Text="{Binding Name}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
        <Button
            Style="{StaticResource CancelBtn}"
            x:Name="btnCancel"
            Command="{Binding GoBackCommand}"
            Grid.Row="1"/>

    </Grid>
</ContentPage>