<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flash_card_app.Views.AddCardPage"
             Title="Add Card">
    <Grid
        x:Name="addCardGrid"
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackLayout
            Grid.Row="0">
        <Label Text="Question" 
               Margin="0, 10, 0, 0"/>
        <Entry x:Name="entryQuestion"
               MinimumHeightRequest="70"/>

        <Label Text="Answer"
               Margin="0, 2, 0, 0"/>
        <Entry x:Name="entryAnswer" 
               MinimumHeightRequest="70"/>
        


        <Button
            x:Name="btnAddCard"
            Text="Save Card"
            Clicked="btnAddCard_Clicked"
            Margin="0, 5, 0, 0" />
        </StackLayout>

        <Button
            x:Name="btnCancel"
            Text="Cancel"
            Clicked="btnCancel_Clicked" 
            Margin="0, 5, 0, 0" 
            Grid.Row="1"/>

    </Grid>
</ContentPage>