<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flash_card_app.Views.CreateCardDeckPage"
             xmlns:model="clr-namespace:flash_card_app.Models"
             xmlns:viewmodel="clr-namespace:flash_card_app.ViewModels"
             x:DataType="viewmodel:CreateCardDeckViewModel"
             Title="{Binding Title}">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding GoBackCommand}" />
    </Shell.BackButtonBehavior>
    <VerticalStackLayout
        Margin="5">
        <Label 
            FontFamily="RobotoMono-Regular"
            Text="Enter name of new Card Deck"
            FontSize="30"  
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="CardDeckNameEntry"
            Text="{Binding CardDeckName, Mode=TwoWay}"
            FontFamily="RobotoMono-Regular"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            MinimumHeightRequest="50"
            WidthRequest="280"
            Margin="0, 25, 0,25"/>
        <Button
            x:Name="CreateCardDeckButton"
            FontFamily="RobotoMono-Regular"
            Text="Save"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Command="{Binding CreateNewCardDeckCommand}"/>
    </VerticalStackLayout>
</ContentPage>