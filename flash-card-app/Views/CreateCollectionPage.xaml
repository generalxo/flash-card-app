<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flash_card_app.Views.CreateCollectionPage"
             Title="CreateCollectionPage">
    <Grid
        x:Name="createCollectioPageGrid"
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackLayout
            Grid.Row="0"
            Padding="10"
            Spacing="20">
            <Label Text="Collection Title" 
               Margin="0, 10, 0, 0"/>
            <Entry x:Name="Title"
               MinimumHeightRequest="70"/>

            <Button
                x:Name="btnSaveCollection"
                Clicked="btnSaveCollection_Clicked"
                Text="Save Collection"
                Margin="0, 5, 0, 0" />
        </StackLayout>

        <Button
            Style="{StaticResource CancelBtn}"
            x:Name="btnCancel"
            Clicked="btnCancel_Clicked"
            Grid.Row="1"/>

    </Grid>
</ContentPage>