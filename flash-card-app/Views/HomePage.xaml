<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flash_card_app.Views.HomePage"
             Title="StartPage">
    <Grid
        x:Name="HomePageGrid"
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackLayout
            Grid.Row="0"
            Padding="10"
            Spacing="20"
            Margin="0, 25, 0, 0">
            <Button
                x:Name="btnStart"
                Text="Start"
                Clicked="btnStart_Clicked" 
                HeightRequest="70"
                WidthRequest="300"/>
            <Button
                x:Name="btnCollections"
                Text="Collections"
                Clicked="btnCollections_Clicked"
                HeightRequest="70"
                WidthRequest="300"/>
        </StackLayout>
        <Button
            Grid.Row="1"
            x:Name="btnExit"
            Text="Exit"
            Clicked="btnExit_Clicked"
            Margin="70, 5, 70, 10"/>
    </Grid>
</ContentPage>