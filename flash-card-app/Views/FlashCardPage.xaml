<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flash_card_app.Views.FlashCardPage"
             Title="Flash Card">
    <VerticalStackLayout
        Spacing="10"
        Margin="10">

        <Button
            x:Name="btnAddCard"
            Text="Add Card"
            Clicked="btnAddCard_Clicked"/>

        <Button
            x:Name="btnEditCard"
            Text="Edit Card" 
            Clicked="btnEditCard_Clicked"/>
    </VerticalStackLayout>
</ContentPage>